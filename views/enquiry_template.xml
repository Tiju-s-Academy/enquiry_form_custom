<odoo>
    <template id="enquiry_template" name="Enquiry Form">
        <t t-call="website.layout">
            <div class="container">
                <h1>Enquiry Form</h1>
                <form action="/enquiry/submit" method="post">
                    <div>
                        <label>Name</label>
                        <input type="text" name="name" required="True"/>
                    </div>
                    <div>
                        <label>Phone</label>
                        <input type="tel" name="phone" required="True"/>
                    </div>
                    <div>
                        <label>Email</label>
                        <input type="email" name="email" required="True"/>
                    </div>
                    <div>
                        <label>Course</label>
                        <input type="text" name="course" required="True"/>
                    </div>
                    <button type="submit">Submit</button>
                </form>
            </div>
        </t>
    </template>
</odoo>
